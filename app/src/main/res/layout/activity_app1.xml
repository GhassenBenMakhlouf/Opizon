<?xml version = "1.0" encoding = "utf-8"?>
<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    android:orientation="vertical"
    android:weightSum="20"
    tools:context = ".MainActivity">
    <RelativeLayout
        android:layout_weight="17"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <com.example.opizon.MyVideoView
            android:id="@+id/video"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            custom:scaleType="fill"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_marginBottom="250dp"/>

        <TextView
            android:id="@+id/word_overlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Word"
            android:textAppearance="@android:style/TextAppearance.Material.Display1"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"

            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id = "@+id/text"
            android:text="click the button"
            android:textSize = "30sp"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/container_userhelper"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id = "@+id/container_userhelper"
            android:layout_above="@+id/hsv"
            android:text="Click on the word to change the meaning :"
            android:textSize = "18sp"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_marginBottom="16dp"/>

        <HorizontalScrollView
            android:id="@+id/hsv"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom = "16dp"
            >
            <LinearLayout
                android:id = "@+id/wordsContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" />
        </HorizontalScrollView>



    </RelativeLayout>
    <RelativeLayout
        android:layout_width = "match_parent"
        android:orientation = "vertical"
        android:layout_height = "0dp"
        android:layout_weight="3"
        android:layout_marginBottom = "20dp">

        <ImageView
            android:id="@+id/speak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:src="@drawable/microphone" />
    </RelativeLayout>
</LinearLayout>