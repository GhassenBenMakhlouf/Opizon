<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="475dp"
    android:background="@color/colorPrimaryDark"
    android:padding="5dp"
    android:layout_gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtclose"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:textColor="@color/white"
            android:text="@string/close_btn"
            android:textStyle="bold"
            android:layout_gravity="end"
            android:gravity="center"
            android:background="@drawable/cerclebackground"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="375dp"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/txtresult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Result can't be shown. Try one more time or contact the Admin!"
            android:textAppearance="@android:style/TextAppearance.Material.Widget.ActionMode.Title"
            android:textColor="@color/white"
            android:textSize="36sp"
            android:layout_marginBottom="20dp"/>
        <ImageView
            android:id="@+id/imgresult"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/problem"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation = "vertical">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnreplay"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"

            android:alpha="0.75"

            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"

            android:text="Replay"
            android:textColor="@color/white"
            android:textSize="16dp"

            app:cornerRadius="25dp"

            app:icon="@drawable/ic_replay_black_24dp"
            app:iconPadding="16dp"
            app:iconSize="32dp"
            app:iconTint="@color/white" />



    </LinearLayout>



</LinearLayout>